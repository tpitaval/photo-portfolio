---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SectionReveal from "../components/SectionReveal.jsx";
import ContactForm from "../components/ContactForm.jsx";

// Pass environment variables to the React component
const emailjsConfig = {
  serviceId: import.meta.env.VITE_EMAILJS_SERVICE_ID,
  templateId: import.meta.env.VITE_EMAILJS_TEMPLATE_ID,
  publicKey: import.meta.env.VITE_EMAILJS_PUBLIC_KEY,
};
---
<BaseLayout title="Contact â€“ Portfolio" description="Get in touch.">
  <Header />
  <main class="pt-24 container-page">
    <SectionReveal>
      <h1 class="h2 font-semibold">Contact me</h1>
    </SectionReveal>
    <SectionReveal>
      <p class="opacity-80 mb-6">For commissions, collaborations, or just to say hello.</p>
    </SectionReveal>
    <SectionReveal>
      <ContactForm client:load {...emailjsConfig} />
    </SectionReveal>
    <p class="mt-6 text-sm text-black/70">
      Prefer Instagram?
      <a href="https://www.instagram.com/pit.production/" target="_blank" rel="noopener" class="underline">Message me on @pit.production</a>
    </p>
  </main>
  <Footer />
</BaseLayout>

